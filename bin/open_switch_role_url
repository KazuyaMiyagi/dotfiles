#! /bin/bash -eu

readonly ROLE_ARN=$(aws configure get role_arn)
readonly ACCOUNT=$(cut -d ':' -f 5 <<< "${ROLE_ARN}")
readonly ROLE_NAME=$(cut -d '/' -f 2 <<< "${ROLE_ARN}")

open "$(printf "https://signin.aws.amazon.com/switchrole?account=%s&roleName=%s&displayName=%s" "${ACCOUNT}" "${ROLE_NAME}" "${AWS_PROFILE}")"
